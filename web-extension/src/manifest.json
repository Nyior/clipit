{
  "manifest_version": 2,
  "name": "Clipit",
  "description": "browser extension for shortening URLs",
  "version": "2.0",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "https://shter.herokuapp.com/"
  ],

  "icons": {
    "16": "icons/clipit-16.png",
    "32": "icons/clipit-32.png",
    "48": "icons/clipit-48.png",
    "128": "icons/clipit-128.png"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "clipit",
    "default_icon": {
        "16": "icons/clipit-16.png",
        "32": "icons/clipit-32.png",
        "48": "icons/clipit-48.png",
        "128": "icons/clipit-128.png"
    }
  }
}
